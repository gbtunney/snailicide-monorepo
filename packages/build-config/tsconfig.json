{
    "extends": "./static/tsconfig-base.json",
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "composite": true,
        "noEmit": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        // "declaration": true,
        "strict": true,
        "noImplicitAny": false,
        "moduleResolution": "node"
    },
    "files": ["esbuild.ts"],
    "exclude": ["node_modules"],
    "include": ["./src/**/*.test.ts", "./*.cjs"],
    "references": [
        { "path": "./src" }
        //{ "path": "./src/tsconfig.node.json" }
    ]
}
