{
    "name": "@snailicide/build-config",
    "private": false,
    "version": "1.4.2",
    "description": "Snailicide Shared Build Configuration",
    "type": "module",
    "files": [
        "./tsconfig-base.json",
        "dist",
        "types",
        "CHANGELOG.md"
    ],
    "exports": {
        ".": [
            {
                "import": "./dist/index.mjs",
                "require": "./dist/index.cjs",
                "default": "./dist/index.js"
            }
        ],
        "./tsconfig-base": "./tsconfig-base.json",
        "./eslint": "./dist/.eslintrc.json",
        "./markdownlint": "./dist/.markdownlint.json",
        "./prettier": "./dist/.prettierrc.json"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "\n========== BUILD >> ==========": "",
        "build": " pnpm build:ts && pnpm build:rollup",
        "build:rollup": "rollup --config ./rollup.config.js  ",
        "build:cp": "cp ./src/tsconfig/tsconfig-base.json .",
        "build:ts": "tsc --build",
        "build:nx": "cross-var nx run $npm_package_name:build",
        "\n========== DEV >> ==========": "",
        "dev": "tsc --build --watch",
        "\n========== TEST >> ==========": "",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "test:nx": "cross-var nx run $npm_package_name:test",
        "\n========== DOCS >> ==========": "",
        "docs:dev": "pnpm run docs:typedoc && vitepress dev",
        "docs:build": "pnpm run docs:typedoc && vitepress build",
        "docs:typedoc": "pnpm run build && pnpm exec typedoc",
        "docs:nx": "cross-var nx run $npm_package_name:docs:build",
        "docs:open": "cross-var pnpm exec open $npm_package_config_docs_url",
        "\n========== DEPLOY >> ==========": "",
        "deploy": "pnpm prerelease && pnpm deploy:docs",
        "deploy:docs": "cross-var scp -r $npm_package_config_docs_deploy_local $npm_package_config_docs_deploy_remote",
        "\n========== PUBLISH >> ==========": "",
        "release": "pnpm prerelease && pnpm publish --access public --report-summary",
        "prerelease": "pnpm run docs:nx && pnpm run release:archive",
        "release:archive": "mkdir -p ./releases &&  pnpm exec npm pack --pack-destination='./releases'",
        "\n========== CODE STYLE >> ==========": "",
        "prettier": "cross-var prettier ./.husky/* --ignore-path ./.gitignore --no-error-on-unmatched-pattern {$npm_package_config_prettier_path}.{$npm_package_config_prettier_extensions} --config $(git rev-parse --show-toplevel)/$npm_package_config_prettier_config",
        "lint": "cross-var eslint -c $(git rev-parse --show-toplevel)/$npm_package_config_eslint_config",
        "lint:md": "pnpm exec markdownlint-cli2 '{./*,./**/*}.md' '#**/node_modules/**' '#packages/test-package/**/*' ",
        "\n========== CHECK >> ==========": "",
        "check": "pnpm lint",
        "check:md": "pnpm run lint:md",
        "\n========== FIX >> ==========": "",
        "fix": "pnpm prettier --write && pnpm lint --fix",
        "fix:md": "pnpm run lint:md --fix",
        "\n========== CLEAN >> ==========": "",
        "clean": "pnpm clean:ts && pnpm clean:build",
        "clean:ts": "tsc --build --clean && rm -R -f tsconfig-base.json",
        "clean:build": "rm -R -f dist types docs"
    },
    "keywords": [
        "eslint",
        "lint",
        "code style",
        "format",
        "prettier",
        "tsconfig",
        "typescript"
    ],
    "homepage": "https://www.npmjs.com/package/@snailicide/build-config",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gbtunney/snailicide-monorepo.git"
    },
    "license": "MIT",
    "author": {
        "name": "Gillian Tunney",
        "email": "gbtunney@mac.com"
    },
    "dependencies": {
        "@eslint/js": "^9.25.1",
        "@rollup/plugin-commonjs": "^28.0.3",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@rollup/plugin-terser": "^0.4.4",
        "@shikijs/core": "^3.3.0",
        "@shikijs/transformers": "3.3.0",
        "@types/eslint": "^9.6.1",
        "@types/markdown-it": "^14.1.2",
        "@vitejs/plugin-vue": "^5.2.3",
        "eslint": "^9.25.1",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-filenames-simple": "^0.9.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsdoc": "^50.6.10",
        "eslint-plugin-sort": "^4.0.0",
        "eslint-plugin-unused-imports": "^4.1.4",
        "eslint-plugin-vitest": "^0.5.4",
        "flat": "^6.0.1",
        "globals": "^16.0.0",
        "markdown-it": "^14.1.0",
        "markdownlint": "^0.37.4",
        "micromatch": "^4.0.8",
        "prettier": "^3.5.3",
        "ramda": "^0.30.1",
        "ramda-adjunct": "^5.0.1",
        "rollup": "^4.40.0",
        "rollup-plugin-node-externals": "^7.1.2",
        "rollup-plugin-polyfill-node": "^0.13.0",
        "rollup-plugin-ts": "^3.4.5",
        "semver": "^7.7.1",
        "shelljs": "^0.9.2",
        "shiki": "^3.3.0",
        "sort-package-json": "^3.0.0",
        "ts-deepmerge": "^7.0.2",
        "type-fest": "^4.40.0",
        "typescript-eslint": "^8.31.0",
        "vite": "^6.3.3",
        "vitest": "^3.1.2",
        "vue": "^3.5.13",
        "zod": "^3.24.3"
    },
    "peerDependencies": {
        "eslint": "^9.25.1",
        "prettier": "^3.5.3",
        "prettier-plugin-jsdoc": "^1.3.2",
        "prettier-plugin-sh": "^0.17.2",
        "rollup": "^4.40.0",
        "vite": "^6.3.3",
        "vitepress": "^1.6.3",
        "vitest": "^3.1.2"
    },
    "devDependencies": {
        "@rollup/plugin-typescript": "^12.1.2",
        "@types/micromatch": "^4.0.9",
        "@types/node": "^22.15.1",
        "@types/ramda": "^0.30.2",
        "@types/semver": "^7.7.0",
        "@types/shelljs": "^0.8.15",
        "cross-var": "^1.1.0",
        "markdownlint-cli": "^0.44.0",
        "prettier-plugin-jsdoc": "^1.3.2",
        "prettier-plugin-sh": "^0.17.2",
        "remark-github": "^12.0.0",
        "remark-toc": "^9.0.0",
        "ts-node": "^10.9.2",
        "typedoc": "^0.28.3",
        "typedoc-plugin-markdown": "4.6.3",
        "typedoc-plugin-remark": "^2.0.0",
        "typedoc-plugin-zod": "^1.4.1",
        "typedoc-vitepress-theme": "^1.1.2",
        "typescript": "^5.8.3",
        "unified-prettier": "^2.0.1",
        "vitepress": "^1.6.3"
    },
    "prettier": "./dist/.prettierrc.json",
    "config": {
        "prettier": {
            "extensions": "ts,js,cjs,mjs,cts,mts,sh,html,json,yaml,yml,graphql,md",
            "path": "*,**/*",
            "config": "prettier.config.js"
        },
        "eslint": {
            "extensions": "ts,js,cjs,mjs",
            "path": "*",
            "config": "eslint.config.js"
        },
        "docs": {
            "url": "https://build-config.snailicide.com",
            "deploy": {
                "remote": "bluehost:~/build-config.snailicide.com",
                "local": "./.vitepress/dist/*"
            }
        }
    }
}
