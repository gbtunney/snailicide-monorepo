{
    "name": "@snailicide/build-config",
    "private": false,
    "version": "1.1.0",
    "description": "Snailicide Shared Build Configuration",
    "type": "module",
    "files": [
        "./tsconfig-base.json",
        "dist",
        "types",
        "CHANGELOG.md"
    ],
    "exports": {
        ".": [
            {
                "import": "./dist/index.mjs",
                "types": "./dist/index.d.ts",
                "require": "./dist/index.cjs",
                "default": "./dist/index.js"
            }
        ],
        "./tsconfig-base": "./tsconfig-base.json",
        "./eslint": "./dist/.eslintrc.json",
        "./prettier": "./dist/.prettierrc.json"
    },
    "main": "./dist/index.js",
    "types": "./types/index.d.ts",
    "scripts": {
        "\n========== BUILD >> ==========": "",
        "build": " pnpm build:ts && pnpm build:rollup",
        "build:rollup": "rollup --config ./rollup.config.js",
        "build:cp": "cp ./src/tsconfig/tsconfig-base.json .",
        "build:ts": "tsc --build",
        "\n========== DEV >> ==========": "",
        "dev": "tsc --build --watch",
        "\n========== TEST >> ==========": "",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "\n========== DOCS >> ==========": "",
        "docs:build": "pnpm run build:ts && pnpm exec typedoc",
        "docs:serve": " vite --config ./vite.docs.config.ts",
        "\n========== PUBLISH >> ==========": "",
        "release": "pnpm prerelease && pnpm publish --access public --show-report-summary",
        "prerelease": "pnpm clean && pnpm build && pnpm fix",
        "release:test": "pnpm prerelease &&  pnpm publish --dry-run --show-report-summary",
        "\n========== CODE STYLE >> ==========": "",
        "lint": "cross-var eslint \"{$npm_package_config_eslint_path}.{$npm_package_config_eslint_extensions}\" --ignore-path .gitignore -c $npm_package_config_eslint_config",
        "prettier": "cross-var prettier {$npm_package_config_prettier_path}.{$npm_package_config_prettier_extensions} --ignore-path ./.gitignore",
        "\n========== FIX >> ==========": "",
        "fix": "pnpm prettier --write",
        "\n========== CLEAN >> ==========": "",
        "clean": "pnpm clean:ts && pnpm clean:build",
        "clean:ts": "tsc --build --clean && rm -R -f tsconfig-base.json",
        "clean:build": "rm -R -f dist types docs"
    },
    "keywords": [
        "eslint",
        "lint",
        "code style",
        "format",
        "prettier",
        "tsconfig",
        "typescript"
    ],
    "homepage": "https://www.npmjs.com/package/@snailicide/build-config",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gbtunney/snailicide-monorepo.git"
    },
    "license": "MIT",
    "author": {
        "name": "Gillian Tunney",
        "email": "gbtunney@mac.com"
    },
    "dependencies": {
        "@eslint/js": "^9.6.0",
        "@rollup/plugin-commonjs": "^26.0.1",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-terser": "^0.4.4",
        "@types/eslint": "^8.56.10",
        "eslint": "^9.7.0",
        "eslint-plugin-filenames-simple": "^0.9.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsdoc": "^48.5.2",
        "eslint-plugin-sort": "^3.0.2",
        "eslint-plugin-unused-imports": "^4.0.0",
        "eslint-plugin-vitest": "^0.5.4",
        "flat": "^6.0.1",
        "globals": "^15.8.0",
        "prettier": "^3.3.2",
        "ramda": "^0.30.1",
        "ramda-adjunct": "^5.0.1",
        "rollup-plugin-node-externals": "^7.1.2",
        "rollup-plugin-polyfill-node": "^0.13.0",
        "rollup-plugin-ts": "^3.4.5",
        "semver": "^7.6.3",
        "sort-package-json": "^2.10.0",
        "ts-deepmerge": "^7.0.1",
        "type-fest": "^4.22.1",
        "typescript-eslint": "^7.15.0",
        "vite": "^5.3.3",
        "vitest": "^2.0.3",
        "zod": "^3.23.8"
    },
    "peerDependencies": {
        "eslint": "^9.7.0",
        "prettier": "^3.3.2",
        "prettier-plugin-jsdoc": "^1.0.2",
        "prettier-plugin-sh": "^0.14.0",
        "rollup": "^4.18.0",
        "vite": "^5.3.3",
        "vitest": "^1.6.0"
    },
    "devDependencies": {
        "@types/node": "^20.6.2",
        "@types/ramda": "^0.30.1",
        "@types/semver": "^7.5.8",
        "@types/shelljs": "^0.8.12",
        "cross-var": "^1.1.0",
        "rollup": "^4.19.0",
        "shelljs": "^0.8.5",
        "ts-node": "^10.9.1",
        "typedoc": "^0.26.5",
        "typedoc-plugin-markdown": "^4.2.2",
        "typescript": "^5.2.2"
    },
    "prettier": "./dist/.prettierrc.json"
}
