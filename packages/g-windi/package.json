{
    "name": "@snailicide/g-windi",
    "version": "0.0.12",
    "private": false,
    "description": "Example monorepo package",
    "scripts": {
        "\n========== DEVELOPMENT >> ==========": "",
        "dev": "pnpm build:ts --watch",
        "dev:ts": "pnpm build:ts --watch",
        "dev:rollup": "rollup --watch --config ./rollup.config.js",
        "dev:vite": "pnpm exec vite --config ./vite.config.ts",
        "build:nx": "cross-var nx run $npm_package_name:build",
        "\n========== BUILD >> ==========": "",
        "build": "pnpm build:ts && pnpm build:rollup",
        "build:ts": "pnpm exec tsc --build",
        "build:rollup": "rollup --config ./rollup.config.js",
        "build:vite": "pnpm exec vite build --config ./vite.config.ts",
        "\n========== TEST >> ==========": "",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "test:coverage": "vitest run --coverage",
        "test:coverage:watch": "vitest watch --coverage",
        "test:coverage:open": "pnpm test:coverage && open coverage/index.html",
        "test:swatch": "tsx ./test-swatch.ts",
        "test:repo": "pnpm exec ls $(git rev-parse --show-toplevel)",
        "test:nx": "cross-var nx run $npm_package_name:test",
        "\n========== CLEAN >> ==========": "",
        "clean": "pnpm clean:ts && pnpm clean:build",
        "clean:ts": "pnpm exec tsc --build --clean",
        "clean:build": "pnpm exec rm -rf ./dist ./types",
        "\n========== DOCS >> ==========": "",
        "docs:build": "pnpm run build:nx && pnpm exec typedoc && pnpm docs:format",
        "docs:format": "pnpm exec prettier ./docs --write",
        "docs:nx": "cross-var nx run $npm_package_name:docs:build",
        "\n========== PUBLISH >> ==========": "",
        "release": "pnpm prerelease && pnpm publish --access public --report-summary",
        "prerelease": "pnpm run docs:nx && pnpm run release:archive",
        "release:archive": "mkdir -p ./releases &&  pnpm exec npm pack --pack-destination='./releases'",
        "\n========== CHECK >> ==========": "",
        "check": "pnpm check:self",
        "check:md": "pnpm run lint:md",
        "check:self": "pnpm lint",
        "\n========== FIX >> ==========": "",
        "fix": "pnpm fix:self",
        "fix:md": "pnpm run lint:md --fix",
        "fix:self": "pnpm prettier --write && pnpm lint --fix",
        "\n========== CODE STYLE >> ==========": "",
        "prettier": "prettier --ignore-path ./.gitignore --no-error-on-unmatched-pattern .",
        "lint": "pnpm exec eslint .",
        "lint:md": "pnpm exec markdownlint-cli2 '{./*,./**/*}.md' '#**/node_modules/**' '#packages/test-package/**/*' "
    },
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "dependencies": {
        "@snailicide/g-library": "workspace:*",
        "@types/culori": "^4.0.0",
        "@types/ramda": "^0.31.0",
        "@unocss/core": "^66.3.3",
        "@unocss/preset-wind4": "^66.3.3",
        "chalk": "^5.4.1",
        "colorjs.io": "^0.5.2",
        "culori": "^4.0.2",
        "ramda": "^0.31.3",
        "ramda-adjunct": "^5.1.0",
        "type-fest": "^4.41.0"
    },
    "devDependencies": {
        "@snailicide/build-config": "workspace:*",
        "@types/node": "^22.13.1",
        "@vitest/coverage-v8": "3.2.4",
        "cross-var": "^1.1.0",
        "eslint": "^9.20.0",
        "rollup": "^4.34.6",
        "tsx": "^4.20.3",
        "typescript": "^5.7.3",
        "unocss": "^66.3.3",
        "vitest": "^3.0.5"
    },
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        }
    },
    "author": {
        "name": "Gillian Tunney",
        "email": "gbtunney@mac.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/gbtunney/gbt-boilerplate"
    },
    "homepage": "https://github.com/gbtunney/gbt-boilerplate",
    "packageManager": "pnpm@10.9.0",
    "engines": {
        "node": ">=18.7.0 <22.0.0",
        "pnpm": ">=9.0.0"
    },
    "files": [
        "CHANGELOG.md",
        "dist",
        "types"
    ],
    "keywords": [
        "boilerplate"
    ],
    "config": {
        "prettier": {
            "extensions": "ts,js,cjs,mjs,cts,mts,sh,html,json,yaml,yml,graphql,md",
            "path": "*,**/*",
            "config": "prettier.config.js"
        },
        "eslint": {
            "extensions": "ts,js,cjs,mjs",
            "path": "*",
            "config": "eslint.config.js"
        }
    }
}
