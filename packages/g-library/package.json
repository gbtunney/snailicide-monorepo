{
    "name": "@snailicide/g-library",
    "version": "0.3.0",
    "description": "Function library written in typescript",
    "private": false,
    "type": "module",
    "files": [
        "docs",
        "types",
        "dist",
        "dist/string-node",
        "CHANGELOG.md",
        "vite.docs.config.ts",
        "doc.server.js"
    ],
    "bin": {
        "g-library-docs": "./docs.server.mjs"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./types/index.d.ts",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        },
        "./string-cdn": "./dist/string-node/index-iife.js",
        "./string": {
            "import": "./dist/string-node/index.esm.js",
            "default": "./dist/string-node/index.esm.js"
        }
    },
    "main": "dist/index.js",
    "types": "types/index.d.ts",
    "umd:main": "dist/index.umd.js",
    "module": "dist/index.esm.js",
    "commonjs": "dist/index.cjs",
    "cdn": "dist/g-library.js",
    "keywords": [
        "typescript",
        "js",
        "ts",
        "javascript",
        "function library",
        "type library",
        "typeguards",
        "typeguard",
        "utilities"
    ],
    "scripts": {
        "\n========== BUILD >> ==========": "",
        "build": "pnpm build:ts && pnpm build:rollup && pnpm build:rollup:module",
        "build:rollup": "rollup --config ./rollup.config.js",
        "build:rollup:module": "rollup --config ./rollup.config.modules.js",
        "build:ts": "tsc --build",
        "\n========== DEV >> ==========": "",
        "dev": "tsc --build --watch",
        "dev:rollup": "nodemon --exec 'pnpm build' --watch ./rollup.config.ts ./src",
        "\n========== TEST >> ==========": "",
        "test": "jest",
        "test:workflow": "open /Applications/Docker.app && pnpm test:workflow:release",
        "test:workflow:release": "cross-var pnpm exec gh act --workflows  $(git rev-parse --show-toplevel)/workflows/workflow-release-package.yml  --input PACKAGE_NAME='$npm_package_name' --reuse",
        "test:watch": "jest --watch",
        "test:example": "ts-node --esm ./exampleNodeScript.ts --path ./../../themes --name shopify-dawn",
        "\n========== DOCS >> ==========": "",
        "docs:build": "pnpm exec jsdoc -c ./jsdoc.json -t ./node_modules/better-docs",
        "docs:serve": "pnpm run docs:build && vite --config ./vite.docs.config.ts",
        "docs:dev": "nodemon --exec 'jsdoc -c ./jsdoc.json -t ./node_modules/better-docs' --watch ./src",
        "\n========== PUBLISH >> ==========": "",
        "release": "pnpm prerelease && pnpm publish --access public --report-summary --no-git-checks",
        "prerelease": "pnpm clean && pnpm build && pnpm run docs:build && pnpm fix && pnpm check && pnpm test && pnpm run release:archive",
        "release:archive": "mkdir -p ./releases &&  pnpm exec npm pack --pack-destination='./releases'",
        "\n========== DEPLOY >> ==========": "",
        "deploy": "pnpm prerelease && pnpm deploy:docs",
        "deploy:docs": "cross-var scp -r $npm_package_config_deploy_docs_local $npm_package_config_deploy_docs_remote",
        "\n========== CLEAN >> ==========": "",
        "clean": "pnpm clean:ts && pnpm clean:build",
        "clean:ts": "tsc --build --clean",
        "clean:build": "rm -R -f dist && rm -R -f types && rm -R -f docs",
        "\n========== CODE STYLE >> ==========": "",
        "lint": "cross-var eslint {$npm_package_config_eslint_path}.{$npm_package_config_eslint_extensions} --ignore-path .gitignore -c $npm_package_config_eslint_config",
        "prettier": "cross-var prettier {$npm_package_config_prettier_path}.{$npm_package_config_prettier_extensions} --ignore-path ./.gitignore",
        "\n========== CHECK >> ==========": "",
        "check": "pnpm lint",
        "\n========== FIX >> ==========": "",
        "fix": "pnpm prettier --write"
    },
    "dependencies": {
        "@types/glob": "^8.1.0",
        "@types/is-glob": "^4.0.4",
        "@types/markdown-it": "^14.1.1",
        "@types/node": "^20.12.12",
        "@types/ramda": "^0.30.0",
        "@types/semver": "^7.5.8",
        "@types/yargs": "^17.0.32",
        "chroma.ts": "^1.0.10",
        "flat": "^6.0.1",
        "fuse.js": "^7.0.0",
        "glob": "^10.4.1",
        "handlebars": "^4.7.8",
        "is-glob": "^4.0.3",
        "markdown-it": "^14.1.0",
        "ramda": "^0.30.0",
        "ramda-adjunct": "^5.0.0",
        "semver": "^7.6.2",
        "shelljs": "^0.8.5",
        "ts-deepmerge": "^7.0.0",
        "type-fest": "^4.18.3",
        "vite": "^5.2.11",
        "yargs": "^17.7.2",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.8",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-terser": "^0.4.4",
        "@snailicide/build-config": "workspace:^",
        "@types/jest": "^29.5.12",
        "@types/shelljs": "^0.8.15",
        "better-docs": "^2.7.3",
        "cross-var": "^1.1.0",
        "eslint": "^8.57.0",
        "jest": "^29.7.0",
        "jsdoc": "^4.0.3",
        "nodemon": "^3.1.1",
        "prettier": "^3.2.5",
        "rollup": "^4.18.0",
        "rollup-plugin-ts": "*",
        "rollup-plugin-buble": "^0.19.8",
        "rollup-plugin-bundle-esm": "^0.1.1",
        "rollup-plugin-filesize": "^10.0.0",
        "rollup-plugin-node-externals": "^7.1.2",
        "rollup-plugin-polyfill-node": "^0.13.0",
        "rollup-plugin-sizes": "^1.0.6",
        "rollup-plugin-typescript2": "^0.36.0",
        "taffydb": "^2.7.3",
        "ts-jest": "^29.1.3",
        "ts-jest-resolver": "^2.0.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5"
    },
    "directories": {
        "doc": "./docs"
    },
    "prettier": "@snailicide/build-config/prettier",
    "jest": {
        "preset": "ts-jest",
        "resolver": "ts-jest-resolver",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "dist",
            "types"
        ]
    },
    "config": {
        "publish": {
            "private": "http://localhost:4873"
        },
        "deploy": {
            "docs": {
                "remote": "bluehost:~/public_html/docs-snailicide",
                "local": "./docs/*"
            }
        },
        "eslint": {
            "extensions": "ts,js,cjs,mjs",
            "path": "*,**/*",
            "config": "./.eslintrc.cjs"
        },
        "prettier": {
            "extensions": "ts,js,cjs,mjs,cts,json,yaml,yml,graphql,md",
            "path": "*,**/*"
        }
    },
    "homepage": "https://github.com/gbtunney/snailicide-monorepo/tree/main/packages/g-library",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gbtunney/snailicide-monorepo.git"
    },
    "license": "MIT",
    "author": {
        "name": "Gillian Tunney",
        "email": "gbtunney@mac.com"
    }
}
