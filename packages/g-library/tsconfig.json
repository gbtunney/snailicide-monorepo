{
    "extends": "@snailicide/build-config/tsconfig-base",
    "compilerOptions": {
        // Transpilation settings.
        "module": "ESNext",
        "target": "ESNext",

        // Output settings.
        "charset": "utf-8",
        "newLine": "LF",
        "sourceMap": true,
        "rootDir": ".",
        // Type declaration settings.
        "declaration": true,
        "outDir": "./types",
        "declarationMap": true,
        "lib": ["ES2020", "dom", "ESNext"]
    },
    "exclude": ["src/**/*.test.ts", "./src/**/*.test.tsx"],
    "include": ["src/**/*.ts", "**/*.tsx"]
}
