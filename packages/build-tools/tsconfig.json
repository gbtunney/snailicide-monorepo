{
    "extends": "@snailicide/build-config/tsconfig-base",
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext", "DOM"],
        "composite": true,
        "module": "ESNext",
        "allowSyntheticDefaultImports": true,
        "rootDir": ".",
        "types": ["node"]
    },
    "exclude": ["./node_modules"],
    "include": ["./*.ts", "package.json"],
    "references": [{ "path": "./src" }]
}
