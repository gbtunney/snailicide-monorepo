{
    "name": "@snailicide/build-tools",
    "version": "0.0.2",
    "description": "Rollup Tools and Npm updater",
    "private": false,
    "type": "module",
    "scripts": {
        "\n========== BUILD >> ==========": "",
        "build": "pnpm build:ts && pnpm build:rollup",
        "build:rollup": "rollup --config ./rollup.config.js",
        "build:ts": "tsc --build",
        "\n========== DEV >> ==========": "",
        "dev": "tsc --build --watch",
        "\n========== TEST >> ==========": "",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "\n========== PUBLISH >> ==========": "",
        "preversion": "echo 'version bumped!'",
        "release": "pnpm  prerelease && pnpm publish --access public --report-summary",
        "prerelease": "pnpm clean && pnpm build &&  pnpm test && pnpm run release:archive",
        "release:archive": "mkdir -p ./releases &&  pnpm exec npm pack --pack-destination='./releases'",
        "test:release:workflow": "open /Applications/Docker.app && cross-var pnpm exec gh act --workflows  $(git rev-parse --show-toplevel)/workflows/workflow-release-package.yml  --input PACKAGE_NAME='$npm_package_name' --reuse",
        "\n========== CLEAN >> ==========": "",
        "clean": "pnpm clean:ts && pnpm clean:build",
        "clean:ts": "tsc --build --clean",
        "clean:build": "rm -R -f dist && rm -R -f types && rm -R -f docs"
    },
    "dependencies": {
        "@rollup/plugin-commonjs": "^26.0.1",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-terser": "^0.4.4",
        "flat": "^6.0.1",
        "ramda": "^0.30.1",
        "ramda-adjunct": "^5.0.1",
        "rollup": "^4.18.0",
        "rollup-plugin-node-externals": "^7.1.2",
        "rollup-plugin-polyfill-node": "^0.13.0",
        "rollup-plugin-ts": "^3.4.5",
        "semver": "^7.6.2",
        "sort-package-json": "^2.10.0",
        "ts-deepmerge": "^7.0.0",
        "type-fest": "^4.21.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@snailicide/build-config": "workspace:^",
        "@types/node": "^20.14.10",
        "@types/ramda": "^0.30.1",
        "@types/semver": "^7.5.8",
        "cross-var": "^1.1.0",
        "jsdoc": "^4.0.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.3",
        "vite": "^5.3.3",
        "vitest": "^1.6.0"
    },
    "keywords": [
        "rollup",
        "npm package",
        "npm",
        "utilities"
    ],
    "files": [
        "types",
        "dist",
        "CHANGELOG.md"
    ],
    "exports": {
        ".": {
            "default": "./dist/index.js",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs",
            "types": "./dist/index.d.ts"
        }
    },
    "main": "./dist/index.js",
    "types": "./dist/index.js",
    "prettier": "@snailicide/build-config/prettier",
    "homepage": "https://github.com/gbtunney/snailicide-monorepo/tree/main/packages/build-tools",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gbtunney/snailicide-monorepo.git"
    },
    "license": "MIT",
    "author": {
        "name": "Gillian Tunney",
        "email": "gbtunney@mac.com"
    }
}
