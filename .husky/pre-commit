#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Protect master from accidental commits.
branchName=$(git branch | grep '*' | sed 's/* //')
echo -e "===\n>> Pre-commit Hook:: Checking branch name $branchName"

if [ $branchName == 'master' ]
then
  echo -e "\nðŸš« Commit directly to master branch is not allowed! / Commit langsung ke branch master dilarang!\n" && exit 1
fi

if [ $branchName == 'develop' ]
then
  echo -e "\nðŸš« Cannot push to remote develop branch, please create your own branch and use PR."
  echo -e "ðŸš« Tidak bisa push ke remote branch develop, silahkan buat branch kamu sendiri dan gunakan pull request.\n" && exit 1
fi

if [[ $branchName = *[![:ascii:]]* ]]
then
  echo -e "\nðŸš« Branch name should not have any ascii and upper case letters, please rename your branch name / Nama branch tidak boleh menggunakan huruf besar dan tidak boleh mengandung ascii.\n" && exit 1
fi

if [[ $branchName =~ [A-Z] ]]
then
  echo -e "\nðŸš« Branch name should not have any ascii and upper case letters, please rename your branch name / Nama branch tidak boleh menggunakan huruf besar dan tidak boleh mengandung ascii.\n" && exit 1
fi

echo -e ">> Finish checking branch name / Selesai mengecek nama branch.\n==="

exit 0
